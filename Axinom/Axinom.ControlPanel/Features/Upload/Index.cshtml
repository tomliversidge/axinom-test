<div>
    <h1>Upload File</h1>
    <form method="post" enctype="multipart/form-data" asp-controller="Upload" asp-action="Post">
        <div class="form-group">
            <div class="col-md-10">
                <p>Username:</p>
                <input type="text" name="username"/>
            </div>
            <div class="col-md-10">
                <p>Password:</p>
                <input type="password" name="password"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <p>Upload zip file:</p>
                <input type="file" name="file"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload"/>
            </div>
        </div>
    </form>
</div>
